{
  "name": "flow",
  "displayName": "Flow",
  "description": "Flow is a modern VSCode extension that reimagines the terminal experience. Inspired by tools like Warp and Wave, Flow brings features like intelligent autocomplete, multi-log monitoring, split view with drag-and-drop, and powerful command chaining â€” all within your editor ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "flow.editor",
        "displayName": "Flow Editor",
        "selector": [
          {
            "filenamePattern": "*.flow"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "flow.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "flow.newFile",
        "title": "Flow: New Flow File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "build:css": "npx @tailwindcss/cli -i ./src/webview/styles.css -o ./dist/webview.css --minify",
    "watch:css": "npx @tailwindcss/cli -i ./src/webview/styles.css -o ./dist/webview.css --watch",
    "compile": "pnpm run build:css && pnpm run check-types && pnpm run lint && node esbuild.js",
    "compile:extension": "node esbuild.js",
    "compile:webview": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run build:css && pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir dist",
    "watch-tests": "tsc -p . -w --outDir dist",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "version:patch": "npm version patch -m \"chore: release v%s\"",
    "version:minor": "npm version minor -m \"chore: release v%s\"",
    "version:major": "npm version major -m \"chore: release v%s\""
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/mocha": "^10.0.10",
    "@types/node": "~25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.3",
    "eslint": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "ansi-to-react": "^6.2.6",
    "immer": "^11.1.3",
    "lucide-react": "^0.563.0",
    "node-pty": "^1.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
